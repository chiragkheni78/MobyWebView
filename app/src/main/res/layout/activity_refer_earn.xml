<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/RootLayout"
    tools:context=".activities.MessageActivity">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            style="@style/RootLayout"
            android:padding="@dimen/padding_standard">

            <TextView
                android:id="@+id/tvTitle"
                style="@style/TvDxLarge"
                android:gravity="center"
                android:layout_gravity="center"
                android:text="Refer &amp; Earn"
                android:layout_margin="@dimen/_25sdp"
                android:visibility="gone"
                android:textStyle="bold" />

            <com.smarteist.autoimageslider.SliderView
                android:id="@+id/imageSlider"
                android:layout_width="@dimen/_340sdp"
                android:layout_height="@dimen/_340sdp"
                app:sliderAnimationDuration="600"
                app:sliderAutoCycleDirection="back_and_forth"
                app:sliderAutoCycleEnabled="true"
                app:sliderIndicatorAnimationDuration="600"
                app:sliderIndicatorGravity="center_horizontal|bottom"
                app:sliderIndicatorMarginLeft="15dp"
                app:sliderIndicatorMarginRight="15dp"
                app:sliderIndicatorMarginTop="15dp"
                app:sliderIndicatorMarginBottom="15dp"
                app:sliderIndicatorOrientation="horizontal"
                app:sliderIndicatorPadding="3dp"
                android:layout_gravity="center"
                android:layout_margin="@dimen/_15sdp"
                app:sliderIndicatorRadius="2dp"
                app:sliderIndicatorSelectedColor="@color/colorPrimary"
                app:sliderIndicatorUnselectedColor="@color/colorBackground"
                app:sliderScrollTimeInSec="10"
                app:sliderStartAutoCycle="false" />

            <TextView
                android:id="@+id/tv_cis_message"
                style="@style/TvLarge"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:gravity="center"
                android:letterSpacing="0.1"
                android:lineSpacingExtra="@dimen/_2sdp"
                android:text="@string/share_title"
                android:textColor="@color/colorPrimaryText" />

            <LinearLayout
                style="@style/NormalLayout"
                android:layout_marginTop="@dimen/padding_large"
                android:layout_marginBottom="@dimen/padding_large"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvWhatsapp"
                    style="@style/TvStandard"
                    android:drawableTop="@drawable/ic_whatsapp"
                    android:drawablePadding="@dimen/padding_micro"
                    android:gravity="center"
                    android:text="WhatsApp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvMessenger"
                    style="@style/TvStandard"
                    android:layout_marginLeft="@dimen/_25sdp"
                    android:drawableTop="@drawable/ic_messenger"
                    android:drawablePadding="@dimen/padding_micro"
                    android:gravity="center"
                    android:text="Messenger"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvSMS"
                    style="@style/TvStandard"
                    android:layout_marginLeft="@dimen/_25sdp"
                    android:drawableTop="@drawable/ic_sms"
                    android:drawablePadding="@dimen/padding_micro"
                    android:gravity="center"
                    android:text="SMS"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvEmail"
                    style="@style/TvStandard"
                    android:layout_marginLeft="@dimen/_25sdp"
                    android:drawableTop="@drawable/ic_email"
                    android:drawablePadding="@dimen/padding_micro"
                    android:gravity="center"
                    android:text="Email"
                    android:textStyle="bold" />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>