<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/llTimeline"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/padding_micro">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardBackgroundColor="@color/white"
        card_view:cardCornerRadius="@dimen/_5sdp"
        card_view:cardElevation="3dp"
        card_view:cardUseCompatPadding="true">

        <LinearLayout
            android:id="@+id/llFade"
            style="@style/NormalLayout"
            android:background="@color/white"
            android:orientation="horizontal"
            android:padding="3dp">

            <RelativeLayout
                android:id="@+id/cardItemActivityMain"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="@dimen/padding_mini">

                <LinearLayout
                    android:id="@+id/llTest"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tvOfferName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_toLeftOf="@+id/llQuizReward"
                            android:text="Name"
                            android:textColor="@color/black"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tvDate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/tvOfferName"
                            android:layout_centerVertical="true"
                            android:text="2nd May 2017"
                            android:textColor="@color/secondary_text"
                            android:textSize="12sp"
                            android:visibility="gone" />

                        <LinearLayout
                            android:id="@+id/llQuizReward"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_marginBottom="5dp"
                            android:gravity="right"
                            android:orientation="vertical"
                            android:visibility="visible">

                            <TextView
                                android:id="@+id/tvQuizReward"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:drawablePadding="5dp"
                                android:gravity="right"
                                android:text="Rs. 500"
                                android:textColor="@color/black"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:visibility="visible" />

                            <TextView
                                android:id="@+id/lblReward"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:drawablePadding="5dp"
                                android:gravity="right"
                                android:text="(Max Cashback On Used Coupon)"
                                android:textColor="@color/primary_text"
                                android:textSize="8sp"
                                android:visibility="visible" />

                        </LinearLayout>
                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/llTest"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/ivLogo"
                            android:layout_width="@dimen/_70sdp"
                            android:layout_height="@dimen/_70sdp"
                            android:scaleType="fitCenter"
                            android:src="@drawable/ic_moby_small" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:id="@+id/llCashback"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/_2sdp"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/lblCashBack"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="@dimen/_3sdp"
                                android:text="Cashback Amount:"
                                android:textColor="@color/primary_text"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:visibility="gone" />


                            <TextView
                                android:id="@+id/tvCashBackAmount"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/rect_black"
                                android:gravity="center"
                                android:minWidth="@dimen/_190sdp"
                                android:paddingHorizontal="@dimen/_10sdp"
                                android:paddingVertical="@dimen/_5sdp"
                                android:text="Rs. 300"
                                android:textColor="@color/white"
                                android:textSize="12sp" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/rlBtns"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/llCashback"
                            android:layout_marginTop="@dimen/_4sdp"
                            android:orientation="horizontal"
                            android:weightSum="2">

                            <LinearLayout
                                android:id="@+id/llCouponCode"
                                style="@style/NormalLayout"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/tvCouponCode"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/rect_primary"
                                    android:gravity="center"
                                    android:padding="@dimen/padding_micro"
                                    android:text="@string/view_coupon"
                                    android:textAllCaps="true"
                                    android:textColor="@color/white"
                                    android:textSize="12sp"
                                    android:visibility="visible" />

                                <TextView
                                    android:id="@+id/tvExpireDay"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/padding_xnano"
                                    android:layout_marginTop="@dimen/padding_nano"
                                    android:gravity="bottom"
                                    android:text="@string/coupon_expired"
                                    android:textColor="@color/red"
                                    android:textSize="8sp"
                                    android:textStyle="italic"
                                    android:visibility="visible" />
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/llRegisterBill"
                                style="@style/NormalLayout"
                                android:layout_width="0dp"
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="@dimen/padding_micro"
                                android:layout_toRightOf="@+id/tvCouponCode"
                                android:layout_weight="1"
                                android:gravity="center_vertical|end"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/tvRegisterBill"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/rect_green_black"
                                    android:gravity="center"
                                    android:minWidth="@dimen/_85sdp"
                                    android:padding="@dimen/padding_micro"
                                    android:text="Register Bill"
                                    android:textAllCaps="true"
                                    android:textColor="@color/white"
                                    android:textSize="12sp"
                                    android:visibility="visible" />

                                <TextView
                                    android:id="@+id/tvRequiredPayout"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/padding_nano"
                                    android:layout_marginRight="@dimen/padding_nano"
                                    android:gravity="bottom"
                                    android:text="(Required For Payout)"
                                    android:textColor="@color/colorPrimaryText"
                                    android:textSize="8sp"
                                    android:visibility="visible" />

                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>

            </RelativeLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>
