<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/_200sdp"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/padding_mini"
        android:layout_marginBottom="@dimen/padding_micro"
        app:cardCornerRadius="3dp"
        app:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rect_white_black">

            <RelativeLayout
                android:id="@+id/rlBankName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tvBankName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/padding_micro"
                    android:layout_marginBottom="@dimen/padding_nano"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:paddingHorizontal="@dimen/padding_micro"
                    android:paddingVertical="@dimen/padding_micro"
                    android:text="YES BANK"
                    android:textColor="@color/colorPrimary"
                    android:textSize="12sp" />

                <ImageView
                    android:id="@+id/ivDelete"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_alignParentRight="true"
                    android:padding="5dp"
                    android:src="@drawable/ic_close_red" />
            </RelativeLayout>

            <TextView
                android:id="@+id/tvCardType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/rlBankName"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="VISA"
                android:textAllCaps="true"
                android:layout_marginBottom="@dimen/padding_micro"
                android:paddingHorizontal="@dimen/padding_micro"
                android:textColor="@color/colorPrimaryText"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tvProductName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvCardType"
                android:layout_marginBottom="@dimen/padding_mini"
                android:ellipsize="end"
                android:paddingHorizontal="@dimen/padding_micro"
                android:maxLines="1"
                android:text="Show Me Live Rewards Pan India"
                android:textColor="@color/colorSecondaryText"
                android:textSize="10sp" />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>