<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/RootLayout"
    tools:context=".activities.HomeActivity">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar"
        android:visibility="gone"/>

    <LinearLayout style="@style/RootLayout">

        <LinearLayout
            android:id="@+id/llFilterSorting"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/padding_mini"
            android:visibility="visible"
            android:weightSum="2">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/_2sdp"
                android:layout_weight="1"
                android:background="@drawable/filter_back"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:padding="@dimen/_6sdp"
                    android:src="@drawable/ic_sort_by"
                    app:tint="@color/secondary" />

                <Spinner
                    android:id="@+id/spinSortBy"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:background="@null"
                    android:drawSelectorOnTop="true"
                    android:entries="@array/sort_by"
                    android:hint="SortBy"
                    android:padding="8dp"
                    android:textColor="@color/blue"
                    android:textSize="12sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_2sdp"
                android:layout_weight="1"
                android:background="@drawable/filter_back"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/ivFilter"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:layout_gravity="center_vertical"
                    android:padding="@dimen/_6sdp"
                    android:src="@drawable/ic_filter"
                    app:tint="@color/secondary" />

                <Spinner
                    android:id="@+id/spinFilter"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_gravity="center_vertical"
                    android:background="@null"
                    android:entries="@array/filter_by"
                    android:hint="Filter"
                    android:padding="8dp"
                    android:textColor="@color/blue"
                    android:textSize="12sp" />

            </LinearLayout>
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvActivityList"
            style="@style/RecycleView78"
            android:visibility="visible"
            tools:listitem="@layout/item_activity" />

        <TextView
            android:id="@+id/tvNoData"
            style="@style/TvXLarge"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginTop="@dimen/margin_view"
            android:text="@string/empty_timeline"
            android:textStyle="bold"
            android:padding="@dimen/margin_view"
            android:visibility="gone" />

    </LinearLayout>
</LinearLayout>