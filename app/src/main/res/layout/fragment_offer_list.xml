<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/RootLayout"
    android:background="@color/colorBackground"
    android:orientation="vertical"
    tools:context=".activities.HomeActivity">

    <LinearLayout
        android:id="@+id/llSearchCategory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">

        <androidx.cardview.widget.CardView
            android:id="@+id/rlSearch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="5dp"
            android:background="@color/white"
            android:orientation="vertical"
            android:visibility="gone"
            app:cardCornerRadius="5dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:padding="0dp"
                android:visibility="visible">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_toLeftOf="@+id/btnSearch">

                    <EditText
                        android:id="@+id/etSearch"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_toLeftOf="@+id/ivFilter"
                        android:background="@null"
                        android:focusableInTouchMode="true"
                        android:hint="Search shop"
                        android:maxLines="1"
                        android:inputType="text"
                        android:imeOptions="actionSearch"
                        android:paddingHorizontal="10dp"
                        android:paddingVertical="@dimen/_2sdp"
                        android:textColor="@color/primary_text"
                        android:textSize="14sp" />

                    <ImageView
                        android:id="@+id/ivFilter"
                        android:layout_width="42dp"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:padding="10dp"
                        android:src="@drawable/ic_filter"
                        android:visibility="gone"
                        app:tint="@color/colorPrimary" />

                </RelativeLayout>

                <ImageView
                    android:id="@+id/btnSearch"
                    android:layout_width="45dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentEnd="true"
                    android:layout_centerInParent="true"
                    android:padding="8dp"
                    android:src="@drawable/ic_search" />

                <!--<TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/ic_search_back"
                    android:gravity="center"
                    android:minWidth="@dimen/_70sdp"
                    android:padding="8dp"
                    android:visibility="gone"
                    android:text="Search"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_14sdp"
                    android:textStyle="bold"
                    android:tint="@color/primary" />-->

            </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvCategory"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:paddingBottom="5dp"
            android:visibility="visible" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/divider" />

    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.core.widget.NestedScrollView
            android:id="@+id/nestedOfferList"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/rlBanner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_marginBottom="@dimen/_5sdp"
                        android:layout_marginHorizontal="@dimen/_10sdp"
                        android:layout_height="wrap_content">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/cardDealOfTheDay"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"


                            android:nestedScrollingEnabled="true"
                            android:visibility="visible"
                            app:cardCornerRadius="@dimen/_5sdp">

                            <com.smarteist.autoimageslider.SliderView
                                android:id="@+id/imageSlider"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_168sdp"
                                app:sliderAnimationDuration="300"
                                app:sliderAutoCycleDirection="right"
                                app:sliderAutoCycleEnabled="true"
                                app:sliderIndicatorAnimationDuration="300"
                                app:sliderIndicatorGravity="center_horizontal|bottom"
                                app:sliderIndicatorMarginBottom="15dp"
                                app:sliderIndicatorMarginLeft="15dp"
                                app:sliderIndicatorMarginRight="15dp"
                                app:sliderIndicatorMarginTop="15dp"
                                app:sliderIndicatorOrientation="horizontal"
                                app:sliderIndicatorPadding="3dp"
                                app:sliderIndicatorRadius="2dp"
                                app:sliderIndicatorSelectedColor="@android:color/transparent"
                                app:sliderIndicatorUnselectedColor="@android:color/transparent"
                                app:sliderScrollTimeInSec="3"
                                app:sliderStartAutoCycle="true" />

                            <ImageView
                                android:id="@+id/imageDealOfTheDay"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:adjustViewBounds="true"
                                android:visibility="gone" />

                        </androidx.cardview.widget.CardView>

                    </LinearLayout>

                    <ImageView
                        android:id="@+id/imageMainClose"
                        android:layout_width="@dimen/_25sdp"
                        android:layout_height="@dimen/_25sdp"
                        android:layout_alignParentEnd="true"
                        android:padding="@dimen/_3sdp"
                        android:elevation="@dimen/_10sdp"
                        android:src="@drawable/ic_close_red" />

                </RelativeLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvOfferList"
                    style="@style/RecycleView78"
                    android:visibility="visible"
                    tools:listitem="@layout/item_offer_list" />

            </LinearLayout>

        </androidx.core.widget.NestedScrollView>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/floating_action_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"
            android:layout_margin="16dp"
            android:contentDescription="@string/fab_content_desc"
            app:backgroundTint="@color/colorPrimary"
            app:srcCompat="@drawable/ic_search_white_24dp" />

    </FrameLayout>

</LinearLayout>
