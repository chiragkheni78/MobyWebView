<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/llRoot"
    style="@style/RootLayout"
    android:visibility="gone"
    tools:context=".activities.HomeActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/llWinCoupon">

            <LinearLayout
                style="@style/RootLayout"
                android:background="@color/transparent"
                android:orientation="vertical">

                <FrameLayout style="@style/NormalLayout">

                    <ImageView
                        android:id="@+id/ivBanner"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_180sdp"
                        android:layout_marginBottom="@dimen/_80sdp"
                        android:background="@color/grey"
                        android:scaleType="centerCrop"
                        android:src="@drawable/iv_place_holder" />

                    <LinearLayout
                        style="@style/NormalLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:layout_marginLeft="@dimen/_15sdp"
                        android:layout_marginTop="@dimen/_70sdp"
                        android:orientation="horizontal"
                        android:padding="@dimen/padding_xnano">

                        <androidx.cardview.widget.CardView
                            style="@style/NormalLayout"
                            android:layout_width="@dimen/_100sdp"
                            android:layout_height="@dimen/_100sdp"
                            android:layout_gravity="bottom"
                            android:layout_margin="@dimen/padding_xnano"
                            android:background="@drawable/rect_white"
                            android:elevation="@dimen/_4sdp">

                            <ImageView
                                android:id="@+id/ivLogo"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:padding="@dimen/padding_nano"
                                android:scaleType="fitXY"
                                android:src="@drawable/ic_enable_location_24" />

                        </androidx.cardview.widget.CardView>

                        <LinearLayout
                            style="@style/NormalLayout"
                            android:layout_marginHorizontal="@dimen/_15sdp"
                            android:layout_marginTop="@dimen/_60sdp"
                            android:layout_marginRight="@dimen/padding_mini"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tvOfferName"
                                style="@style/TvLarge"
                                android:text="MOBY CASHBACK"
                                android:textColor="@color/colorPrimaryText"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/tvOfferRewards"
                                style="@style/TvStandard"
                                android:layout_marginTop="@dimen/padding_micro"
                                android:text="100 - 200 Rs. (C'Back)"
                                android:textColor="@color/colorPrimary"
                                android:textStyle="bold" />

                        </LinearLayout>


                    </LinearLayout>

                </FrameLayout>

                <LinearLayout
                    style="@style/RootLayout"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/margin_view"
                    android:background="@color/transparent"
                    android:gravity="center"
                    android:padding="@dimen/padding_large">

                    <TextView
                        android:id="@+id/tvTitle"
                        style="@style/TvXLarge"
                        android:gravity="center"
                        android:text="Title"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvDesc2"
                        style="@style/TvStandard"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:gravity="center"
                        android:text="Desc2"
                        android:textColor="@color/colorSecondaryText" />


                    <TextView
                        android:id="@+id/tvDesc3"
                        style="@style/TvLarge"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:gravity="center"
                        android:text="Desc3"
                        android:textStyle="bold" />


                    <TextView
                        android:id="@+id/tvDesc4"
                        style="@style/TvStandard"
                        android:layout_marginTop="@dimen/_15sdp"
                        android:gravity="center"
                        android:text="Desc4" />

                </LinearLayout>
            </LinearLayout>
        </ScrollView>

        <com.rey.material.widget.LinearLayout
            android:id="@+id/llWinCoupon"
            style="@style/NormalRippleLayout"
            android:layout_alignParentBottom="true"
            android:background="@color/colorPrimary"
            android:gravity="center">

            <TextView
                android:id="@+id/btnWinCoupon"
                style="@style/TvLarge"
                android:gravity="center"
                android:drawableRight="@drawable/ic_right_24"
                android:drawablePadding="@dimen/_15sdp"
                android:text="@string/win_coupon"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:padding="@dimen/padding_standard" />
        </com.rey.material.widget.LinearLayout>
    </RelativeLayout>

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar_transparent" />

</FrameLayout>
