<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/RootLayout"
    android:id="@+id/llRoot"
    tools:context=".activities.HomeActivity">

    <LinearLayout
        style="@style/RootLayout"
        android:orientation="vertical"
        android:background="@color/transparent">

        <FrameLayout style="@style/NormalLayout">

            <ImageView
                android:id="@+id/ivBanner"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_180sdp"
                android:layout_marginBottom="@dimen/_70sdp"
                android:scaleType="fitXY"
                android:src="@drawable/ic_enable_location_24" />

            <LinearLayout
                style="@style/NormalLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginLeft="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_70sdp"
                android:orientation="horizontal"
                android:padding="@dimen/padding_xnano">

                <androidx.cardview.widget.CardView
                    style="@style/NormalLayout"
                    android:layout_width="@dimen/_100sdp"
                    android:layout_height="@dimen/_100sdp"
                    android:layout_gravity="bottom"
                    android:background="@drawable/rect_white"
                    android:elevation="@dimen/_4sdp">

                    <ImageView
                        android:id="@+id/ivLogo"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="@dimen/padding_nano"
                        android:scaleType="fitXY"
                        android:src="@drawable/ic_enable_location_24" />

                </androidx.cardview.widget.CardView>

                <LinearLayout
                    style="@style/NormalLayout"
                    android:layout_marginHorizontal="@dimen/margin_view"
                    android:layout_marginTop="@dimen/_45sdp"
                    android:layout_marginRight="@dimen/padding_mini"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvOfferName"
                        style="@style/TvLarge"
                        android:text="MOBY CASHBACK"
                        android:textColor="@color/colorPrimaryText"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvOffer"
                        style="@style/TvStandard"
                        android:layout_marginTop="@dimen/padding_mini"
                        android:text="100 - 200 Rs. (C'Back)"
                        android:textColor="@color/colorPrimary"
                        android:textStyle="bold" />

                </LinearLayout>


            </LinearLayout>

        </FrameLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                style="@style/RootLayout"
                android:layout_above="@+id/btnWinCoupon"
                android:gravity="center"
                android:background="@color/transparent"
                android:padding="@dimen/padding_large">

                <TextView
                    android:id="@+id/tvTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Title"
                    android:textColor="@color/colorPrimaryText"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvDesc2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:gravity="center"
                    android:text="Desc1"
                    android:textColor="@color/colorSecondaryText"
                    android:textSize="16sp" />


                <TextView
                    android:id="@+id/tvDesc3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:gravity="center"
                    android:text="Desc2"
                    android:textColor="@color/colorPrimaryText"
                    android:textSize="20sp"
                    android:textStyle="bold" />


                <TextView
                    android:id="@+id/tvDesc4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:gravity="center"
                    android:text="Desc3"
                    android:textColor="@color/colorPrimaryText"
                    android:textSize="16sp" />
            </LinearLayout>

            <com.rey.material.widget.Button
                android:id="@+id/btnWinCoupon"
                style="@style/RippleBtnStandard"
                android:layout_width="match_parent"
                android:layout_alignParentBottom="true"
                android:gravity="center"
                android:text="@string/win_coupon"
                android:textStyle="bold" />
        </RelativeLayout>
    </LinearLayout>

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar_transparent" />

</FrameLayout>
