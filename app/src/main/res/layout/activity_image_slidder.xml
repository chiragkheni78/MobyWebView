<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/RootLayout"
    android:background="@color/colorBackground"
    tools:context=".activities.HomeActivity">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar" />

    <LinearLayout style="@style/RootLayout">

        <FrameLayout
            android:id="@+id/flSlider"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fitsSystemWindows="true"
            app:layout_collapseMode="parallax"
            android:visibility="gone"
            app:layout_scrollFlags="scroll|exitUntilCollapsed">


            <com.cashback.utils.custom.LoopViewPager
                android:id="@+id/vpAdvert"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <com.cashback.utils.custom.CirclePageIndicator
                android:id="@+id/indicator"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:padding="@dimen/padding_standard"
                android:visibility="visible"
                app:fillColor="@color/colorPrimary"
                android:layout_marginBottom="@dimen/_40sdp"
                app:pageColor="@color/white"
                app:radius="5dp"
                app:strokeWidth="-2dp" />

        </FrameLayout>

        <androidx.cardview.widget.CardView
            android:id="@+id/card_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_5sdp"
            android:background="@color/white"
            android:orientation="vertical"
            android:padding="@dimen/_3sdp"
            app:cardUseCompatPadding="true">

        <com.smarteist.autoimageslider.SliderView
            android:id="@+id/imageSlider"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:sliderAnimationDuration="600"
            app:sliderAutoCycleDirection="back_and_forth"
            app:sliderAutoCycleEnabled="true"
            app:sliderIndicatorAnimationDuration="600"
            app:sliderIndicatorGravity="center_horizontal|bottom"
            app:sliderIndicatorMarginLeft="15dp"
            app:sliderIndicatorMarginRight="15dp"
            app:sliderIndicatorMarginTop="15dp"
            app:sliderIndicatorMarginBottom="30dp"
            app:sliderIndicatorOrientation="horizontal"
            app:sliderIndicatorPadding="3dp"
            app:sliderIndicatorRadius="2dp"
            app:sliderIndicatorSelectedColor="@color/colorPrimary"
            app:sliderIndicatorUnselectedColor="@color/colorBackground"
            app:sliderScrollTimeInSec="10"
            app:sliderStartAutoCycle="false" />

        </androidx.cardview.widget.CardView>

    </LinearLayout>
</LinearLayout>