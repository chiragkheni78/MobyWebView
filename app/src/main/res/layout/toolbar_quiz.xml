<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/toolbar"
    style="@style/ToolBar78"
    app:contentInsetLeft="0dp"
    app:contentInsetStart="0dp"
    android:background="@color/transparent"
    app:popupTheme="@style/AppTheme.PopupOverlay">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvToolbarTitle"
            style="@style/TvToolBarTitle78"
            android:textColor="@color/colorPrimaryText"
            android:visibility="visible"/>

        <TextView
            android:id="@+id/tvTitleEnd"
            style="@style/TvToolBarTitle78"
            android:layout_gravity="end|center"
            android:layout_marginRight="@dimen/padding_mini"
            android:visibility="gone" />

        <com.rey.material.widget.ImageButton
            android:id="@+id/ibNavigation"
            style="@style/IbToolBarBack78"
            android:tint="@color/white"
            android:layout_margin="@dimen/padding_micro"
            android:background="@drawable/rect_black_transparent"/>

        <FrameLayout
            android:id="@+id/flTimer"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_margin="@dimen/padding_micro"
            android:layout_gravity="right|center_vertical"
            android:background="@drawable/round_blue">

            <ProgressBar
                android:id="@+id/pbTimer"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:background="@drawable/drawable_circle_dark_blue"
                android:indeterminate="false"
                android:max="100"
                android:progress="40"
                android:progressDrawable="@drawable/drawable_circle_primary"
                android:rotation="270" />

            <TextView
                android:id="@+id/tvTimer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="20"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:textSize="14sp" />
        </FrameLayout>

    </FrameLayout>

</androidx.appcompat.widget.Toolbar>