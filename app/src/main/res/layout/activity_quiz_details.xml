<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/llRoot"
    style="@style/RootLayout"
    android:background="@color/white"
    android:visibility="visible"
    tools:context=".activities.HomeActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/ivBanner"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_180sdp"
            android:background="@color/grey"
            android:scaleType="centerCrop"
            android:src="@drawable/iv_place_holder" />

        <include
            android:id="@+id/toolbar"
            layout="@layout/toolbar_quiz" />

    </RelativeLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_5sdp"
        android:background="@color/white"
        android:orientation="vertical"
        android:padding="@dimen/_5sdp"
        app:cardCornerRadius="@dimen/_5sdp"
        app:cardUseCompatPadding="true">

        <LinearLayout
            style="@style/NormalLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:padding="@dimen/_7sdp">

            <LinearLayout
                style="@style/NormalLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    style="@style/NormalLayout"
                    android:layout_width="@dimen/_80sdp"
                    android:layout_height="@dimen/_80sdp"
                    android:layout_gravity="bottom"
                    android:layout_margin="@dimen/padding_xnano"
                    android:background="@drawable/rect_white"
                    android:elevation="@dimen/_4sdp">

                    <ImageView
                        android:id="@+id/ivLogo"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="fitXY"
                        android:src="@drawable/ic_enable_location_24" />

                </androidx.cardview.widget.CardView>

                <LinearLayout
                    style="@style/NormalLayout"
                    android:layout_width="0dp"
                    android:layout_marginHorizontal="@dimen/_5sdp"
                    android:layout_marginRight="@dimen/padding_mini"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvToolbarTitle"
                        style="@style/TvLarge"
                        android:text="MOBY CASHBACK"
                        android:textColor="@color/colorPrimaryText"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvOfferRewards"
                        style="@style/TvStandard"
                        android:layout_marginTop="@dimen/padding_micro"
                        android:text="100 - 200 Rs. (C'Back)"
                        android:textColor="@color/colorPrimary"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical">

                    <FrameLayout
                        android:id="@+id/flTimer"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:layout_gravity="right|center_vertical"
                        android:layout_margin="@dimen/padding_micro"
                        android:background="@drawable/round_blue">

                        <ProgressBar
                            android:id="@+id/pbTimer"
                            style="?android:attr/progressBarStyleHorizontal"
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            android:background="@drawable/drawable_circle_dark_blue"
                            android:indeterminate="false"
                            android:max="100"
                            android:progress="40"
                            android:progressDrawable="@drawable/drawable_circle_primary"
                            android:rotation="270" />

                        <TextView
                            android:id="@+id/tvTimer"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="20"
                            android:textColor="@color/colorPrimary"
                            android:textSize="14sp"
                            android:textStyle="bold" />
                    </FrameLayout>

                    <TextView
                        android:id="@+id/tvNumber"
                        style="@style/TvStandard"
                        android:layout_height="wrap_content"
                        android:text="1 of 3" />

                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:id="@+id/llQuestion"
                style="@style/NormalLayout"
                android:orientation="vertical">


                <LinearLayout
                    style="@style/RootLayout"
                    android:background="@color/transparent"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="@dimen/padding_mini">

                    <TextView
                        android:id="@+id/tvQuestion"
                        style="@style/TvLarge"
                        android:layout_marginTop="@dimen/_12sdp"
                        android:layout_width="match_parent"
                        android:gravity="center"
                        android:text="Shop via moby coupon to get all "
                        android:textStyle="bold" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                style="@style/RootLayout"
                android:layout_gravity="center"
                android:background="@color/transparent"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingHorizontal="@dimen/_20sdp">


                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvQuizOptions"
                    style="@style/RecycleView78"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:visibility="gone"
                    tools:listitem="@layout/item_quiz_option" />


                <LinearLayout
                    android:id="@+id/llOptionList"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|center"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:visibility="visible">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cvYouTube"
                        style="@style/NormalLayout"
                        android:layout_width="@dimen/_100sdp"
                        android:layout_height="@dimen/_100sdp"
                        android:layout_gravity="bottom|center"
                        android:layout_margin="@dimen/padding_xnano"
                        android:background="@drawable/rect_white"
                        android:elevation="@dimen/_4sdp"
                        android:visibility="gone">

                        <ImageView
                            android:id="@+id/ivYoutube"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:padding="@dimen/padding_nano"
                            android:scaleType="fitXY"
                            android:src="@drawable/iv_youtub" />

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cvQRCode"
                        style="@style/NormalLayout"
                        android:layout_width="@dimen/_100sdp"
                        android:layout_height="@dimen/_100sdp"
                        android:layout_gravity="bottom|center"
                        android:layout_margin="@dimen/padding_xnano"
                        android:background="@drawable/rect_white"
                        android:elevation="@dimen/_4sdp"
                        android:visibility="gone">

                        <ImageView
                            android:id="@+id/ivQRCode"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:padding="@dimen/padding_nano"
                            android:scaleType="fitXY"
                            android:src="@drawable/qr_code" />

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cvTextAnswer"
                        style="@style/NormalLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom|center"
                        android:layout_margin="@dimen/padding_xnano"
                        android:background="@drawable/rect_white"
                        android:elevation="@dimen/_8sdp"
                        android:visibility="gone">

                        <EditText
                            android:id="@+id/etTextAnswer"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:background="@drawable/rect_white"
                            android:hint="Enter your answer here"
                            android:inputType="text"
                            android:padding="8dp"
                            android:textColor="@color/primary_text"
                            android:textSize="16sp" />
                    </androidx.cardview.widget.CardView>

                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.rey.material.widget.Button
            android:id="@+id/btnNext"
            style="@style/RippleBtnStandard"
            android:layout_width="match_parent"
            android:layout_alignParentBottom="true"
            android:gravity="center"
            android:text="@string/win_coupon"
            android:textStyle="bold" />

    </RelativeLayout>

</LinearLayout>
