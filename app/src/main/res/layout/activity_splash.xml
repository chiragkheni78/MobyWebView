<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/RootLayout"
    android:background="@color/secondary"
    tools:context=".activities.SplashActivity">

    <LinearLayout
        style="@style/RootLayout"
        android:layout_margin="@dimen/_15sdp"
        android:background="@drawable/corner_rect_white_splash"
        android:gravity="center"
        android:padding="@dimen/_15sdp">

        <LinearLayout
            style="@style/RootLayout"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical"
            android:background="@color/colorTransparent"
            android:weightSum="3">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/ivMoby"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginBottom="16dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/splash_icon" />

                <TextView
                    android:id="@+id/tvTitle"
                    style="@style/TvLarge"
                    android:gravity="center"
                    android:letterSpacing="0.2"
                    android:lineSpacingExtra="@dimen/_1sdp"
                    android:text="MOBY\nCASHBACK"
                    android:textColor="@color/colorPrimaryText" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginHorizontal="@dimen/_15sdp"
                android:layout_weight="1.2"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/map"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scaleType="centerCrop"
                    android:src="@drawable/splash_map" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.7"
                android:gravity="bottom|center_horizontal"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView7"
                    style="@style/TvStandard"
                    android:gravity="center"
                    android:letterSpacing="0.2"
                    android:lineSpacingExtra="@dimen/_8sdp"
                    android:text="Search Your Brand\nSolve the Ad Quiz\nGet Free Coupons"
                    android:textColor="@color/colorPrimaryText"
                    />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
