<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/RootLayout"
    tools:context=".activities.HomeActivity">


    <LinearLayout
        android:id="@+id/llErrorMessage"
        style="@style/RootLayout"
        android:gravity="center"
        android:visibility="visible"
        android:paddingHorizontal="@dimen/padding_xxlarge">

        <TextView
            android:id="@+id/tvErrorTitle"
            style="@style/TvXLarge"
            android:text="@string/text_verify_phone_no"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvErrorMessage"
            style="@style/TvLarge"
            android:layout_marginTop="@dimen/margin_view"
            android:gravity="center"
            android:text="@string/msg_verify_phone_number_map" />

        <com.rey.material.widget.Button
            android:id="@+id/btnError"
            style="@style/RippleBtnStandard"
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/padding_xxlarge"
            android:background="@drawable/btn_primary"
            android:padding="@dimen/padding_micro"
            android:text="Continue" />

    </LinearLayout>

    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activities.HomeActivity" />
</LinearLayout>
