<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/toolbar"
    style="@style/ToolBar78"
    app:contentInsetLeft="0dp"
    app:contentInsetStart="0dp"
    android:background="@color/colorBackground"
    app:popupTheme="@style/AppTheme.PopupOverlay">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvToolbarTitle"
            style="@style/TvToolBarTitle78"
            android:textColor="@color/colorPrimaryText"
            android:textSize="@dimen/txt_dxLarge"
            android:maxLines="1"
            android:text="Moby Coupon"
            android:paddingHorizontal="@dimen/_10sdp"
            android:layout_gravity="bottom|center_horizontal"/>

        <LinearLayout
            android:id="@+id/llBack"
            style="@style/NormalLayout"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <com.rey.material.widget.ImageButton
                android:id="@+id/ibNavigation"
                style="@style/IbToolBarBack78"
                android:visibility="gone"
                android:tint="@color/colorPrimaryText" />

            <TextView
                android:id="@+id/tvTitleEnd"
                style="@style/TvToolBarTitle78"
                android:layout_gravity="center"
                android:padding="@dimen/padding_standard"
                android:textStyle="normal"
                android:textColor="@color/black"
                android:gravity="center_vertical"
                android:drawableLeft="@drawable/ic_arrow_back"
                android:drawablePadding="@dimen/padding_mini"
                android:visibility="visible"
                android:text=""
                />
        </LinearLayout>

<!--        <com.rey.material.widget.ImageButton-->
<!--            android:id="@+id/ibDownload"-->
<!--            style="@style/IbToolBarBack78"-->
<!--            android:layout_gravity="end"-->
<!--            android:visibility="gone"-->
<!--            android:src="@drawable/ic_download_24px"-->
<!--            android:tint="@color/white" />-->


    </FrameLayout>

</androidx.appcompat.widget.Toolbar>