<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/toolbar"
    style="@style/ToolBar78"
    android:layout_height="@dimen/_50sdp"
    android:background="@color/transparent"
    app:contentInsetLeft="0dp"
    app:contentInsetStart="0dp"
    app:popupTheme="@style/AppTheme.PopupOverlay">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvToolbarTitle"
            style="@style/TvToolBarTitle78"
            android:layout_gravity="center"
            android:maxLines="1"
            android:paddingHorizontal="@dimen/_10sdp"
            android:text="Moby Coupon"
            android:textColor="@color/black"
            android:textSize="@dimen/txt_large" />

        <LinearLayout
            android:id="@+id/llBack"
            style="@style/NormalLayout"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <com.rey.material.widget.ImageButton
                android:id="@+id/ibNavigation"
                style="@style/IbToolBarBack78"
                android:tint="@color/colorPrimaryText"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tvTitleEnd"
                style="@style/TvStandard"
                android:layout_gravity="center"
                android:drawableLeft="@drawable/ic_arrow_back"
                android:drawablePadding="@dimen/padding_mini"
                android:drawableTint="@color/black"
                android:gravity="center_vertical"
                android:padding="@dimen/padding_standard"
                android:text="Back"
                android:textColor="@color/black"
                android:textStyle="normal"
                android:visibility="visible" />
        </LinearLayout>

        <!--        <com.rey.material.widget.ImageButton-->
        <!--            android:id="@+id/ibDownload"-->
        <!--            style="@style/IbToolBarBack78"-->
        <!--            android:layout_gravity="end"-->
        <!--            android:visibility="gone"-->
        <!--            android:src="@drawable/ic_download_24px"-->
        <!--            android:tint="@color/white" />-->


    </FrameLayout>

</androidx.appcompat.widget.Toolbar>