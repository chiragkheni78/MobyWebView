<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/_10sdp"
    android:layout_marginVertical="@dimen/_5sdp"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="@dimen/_5sdp"
    app:cardElevation="@dimen/_5sdp">


    <LinearLayout
        android:id="@+id/llFade"
        style="@style/NormalLayout"
        android:background="@color/white"
        android:orientation="horizontal"
        android:padding="3dp">

        <LinearLayout
            android:id="@+id/llRoot"
            style="@style/NormalLayout"
            android:background="@color/white"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="@dimen/padding_micro">

                <ImageView
                    android:id="@+id/ivLogo"
                    android:layout_width="@dimen/_72sdp"
                    android:layout_height="@dimen/_72sdp"
                    android:scaleType="fitCenter" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_toLeftOf="@+id/ivExpandList"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="@dimen/padding_micro">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/_5sdp"
                            android:layout_toLeftOf="@+id/llRight"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tvAdName"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="3dp"
                                android:text="Offer Name"
                                android:textColor="@color/black"
                                android:textSize="14sp"
                                android:textStyle="bold" />


                            <TextView
                                android:id="@+id/tvBrandName"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="3dp"
                                android:singleLine="true"
                                android:text="Brand Name"
                                android:textColor="@color/black"
                                android:textSize="14sp" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/llRight"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:orientation="vertical">

                            <Button
                                android:id="@+id/btnAdDetails"
                                android:layout_width="@dimen/_70sdp"
                                android:layout_height="@dimen/_27sdp"
                                android:background="@drawable/rect_primary"
                                android:drawableRight="@drawable/ic_right"
                                android:drawableTint="@color/white"
                                android:gravity="center"
                                android:paddingLeft="@dimen/padding_nano"
                                android:paddingRight="@dimen/padding_nano"
                                android:text="@string/view_details"
                                android:textColor="@color/white"
                                android:textSize="8sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/tvLeft"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="bottom"
                                android:layout_marginTop="3dp"
                                android:gravity="right"
                                android:singleLine="true"
                                android:text="5 Left"
                                android:textColor="@color/black"
                                android:textSize="12sp"
                                android:textStyle="bold" />
                        </LinearLayout>
                    </RelativeLayout>

                    <LinearLayout
                        style="@style/NormalLayout"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_marginEnd="2dp"
                        android:layout_marginRight="2dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tvOfferRewards"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/rect_grey"
                            android:gravity="center_vertical"
                            android:includeFontPadding="false"
                            android:paddingHorizontal="@dimen/_10sdp"
                            android:paddingVertical="@dimen/_5sdp"
                            android:text="Rs. 20"
                            android:textColor="@color/black"
                            android:textSize="8sp"
                            android:textStyle="bold" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>
