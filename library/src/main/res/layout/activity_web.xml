<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/RootLayout"
    tools:context=".MobyWebActivity">

    <LinearLayout
        android:id="@+id/llTop"
        style="@style/NormalLayout"
        android:layout_height="?android:attr/actionBarSize"
        android:background="#FF2401"
        android:orientation="horizontal">

        <LinearLayout
            style="@style/NormalLayout"
            android:layout_width="wrap_content"
            android:layout_marginStart="@dimen/_10sdp"
            android:gravity="center_vertical"
            android:padding="5dp">

            <ImageView
                android:id="@+id/ivBack"
                style="@style/ImageTiny"
                android:layout_margin="0dp"
                android:src="@drawable/ic_back" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="3">

            <LinearLayout
                android:id="@+id/llOffer"
                style="@style/NormalLayout"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="0dp">

                <ImageView
                    android:id="@+id/ivMyOffer"
                    style="@style/ImageTiny"
                    android:layout_margin="0dp"
                    android:src="@drawable/ic_offer" />

                <TextView
                    android:id="@+id/tvMyOffer"
                    style="@style/TvXSmall"
                    android:layout_height="wrap_content"
                    android:gravity="bottom"
                    android:layout_marginStart="@dimen/_4sdp"
                    android:text="My Offers" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llCoupon"
                style="@style/NormalLayout"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="0dp">

                <ImageView
                    android:id="@+id/ivCoupon"
                    style="@style/ImageTiny"
                    android:layout_margin="0dp"
                    android:src="@drawable/ic_my_coupon" />

                <TextView
                    android:id="@+id/tvCoupon"
                    style="@style/TvXSmall"
                    android:layout_height="wrap_content"
                    android:gravity="bottom"
                    android:layout_marginStart="@dimen/_4sdp"
                    android:text="My Coupons" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llWallet"
                style="@style/NormalLayout"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="0dp">

                <ImageView
                    android:id="@+id/ivWallet"
                    style="@style/ImageTiny"
                    android:layout_margin="0dp"
                    android:src="@drawable/ic_my_wallet" />

                <TextView
                    android:id="@+id/tvWallet"
                    style="@style/TvXSmall"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_4sdp"
                    android:text="Wallet" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>


    <com.mobycashback.webview.MobyWebviewPermission
        android:id="@+id/webview"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>