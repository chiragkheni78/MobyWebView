<resources>
    <style name="TvSmall" parent="TvStandard">
        <item name="android:textSize">@dimen/txt_small</item>
        <item name="android:textColor">@color/colorPrimaryText</item>
    </style>

    <!-- TextView -->
    <!-- 14sdp -->
    <style name="TvStandard">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/txt_standard</item>
        <item name="android:textColor">@color/colorPrimaryText</item>
        <item name="android:gravity">center</item>
    </style>
    <!-- 10sp -->
    <style name="TvXSmall" parent="TvStandard">
        <item name="android:textSize">@dimen/txt_xSmall</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <!-- 16sp -->
    <style name="TvLarge" parent="TvStandard">
        <item name="android:textSize">@dimen/txt_large</item>
        <item name="android:textColor">@color/colorPrimaryText</item>
    </style>
    <!-- 18sp-->
    <style name="TvXLarge" parent="TvStandard">
        <item name="android:textSize">@dimen/txt_xLarge</item>
        <item name="android:textColor">@color/colorPrimaryText</item>
    </style>
    <!--    20dp-->
    <style name="TvDxLarge" parent="TvStandard">
        <item name="android:textSize">@dimen/txt_dxLarge</item>
        <item name="android:textColor">@color/colorPrimaryText</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- 24dp-->
    <style name="TvExLarge" parent="TvStandard">
        <item name="android:textSize">@dimen/txt_txLarge</item>
        <item name="android:textColor">@color/colorPrimaryText</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!--    Linear Layout -->

    <style name="RootLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="NormalLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:padding">@dimen/_10sdp</item>
    </style>


    <!--    ImageView -->
    <style name="ImageStandard">
        <item name="android:layout_width">@dimen/_100sdp</item>
        <item name="android:layout_height">@dimen/_100sdp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="ImageSemiSmall" parent="ImageStandard">
        <item name="android:layout_width">@dimen/_30sdp</item>
        <item name="android:layout_height">@dimen/_30sdp</item>
    </style>

    <style name="ImageTiny" parent="ImageStandard">
        <item name="android:layout_width">@dimen/_16sdp</item>
        <item name="android:layout_height">@dimen/_16sdp</item>
        <item name="android:tint">@color/white</item>
    </style>

    <style name="ImageSmall" parent="ImageStandard">
        <item name="android:layout_width">@dimen/_60sdp</item>
        <item name="android:layout_height">@dimen/_60sdp</item>
    </style>

    <style name="ImageMedium" parent="ImageStandard">
        <item name="android:layout_width">@dimen/_80sdp</item>
        <item name="android:layout_height">@dimen/_80sdp</item>
    </style>

    <!--    RecyclerView-->

    <style name="RecyclerviewCard">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:clipToPadding">true</item>
        <item name="android:saveEnabled">false</item>
    </style>


    <!--    Cardview -->

    <style name="CardViewSimple">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center|center_horizontal</item>
        <item name="cardUseCompatPadding">true</item>
        <item name="cardPreventCornerOverlap">true</item>
        <item name="cardElevation">@dimen/_10sdp</item>
    </style>

    <style name="CardRadius" parent="CardViewSimple">
        <item name="cardCornerRadius">@dimen/_5sdp</item>
        <item name="cardElevation">@dimen/_5sdp</item>
        <item name="cardBackgroundColor">@color/white</item>
    </style>


    <!-- Button -->

    <style name="BtnStandard">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/_10sdp</item>
        <item name="android:textSize">@dimen/_16sdp</item>
        <item name="android:layout_margin">@dimen/_8sdp</item>
    </style>

    <style name="BtnXLarge" parent="BtnStandard">
        <item name="android:layout_width">match_parent</item>
        <item name="android:padding">@dimen/_10sdp</item>
        <item name="android:textSize">@dimen/_18sdp</item>
    </style>
</resources>